@page
@model HeThongCuuTroThienTai.Pages.DongGop.MH_Add_DongGopModel
<h1 class="text-center">Đóng Góp Chiến Dịch</h1>

<form method="post" class="p-4">
   
    @if (Model.MaChienDich.HasValue)
    {
        <input type="hidden" name="DongGop.MaChienDich" value="@Model.MaChienDich" />
        <p class="mt-3">
            Bạn đang đóng góp cho chiến dịch:
            <b class="text-primary">@Model.ChienDichs.FirstOrDefault(c => c.MaChienDich == Model.MaChienDich)?.TenChienDich</b>
        </p>
    }
    else
    {
        <div class="form-group mt-3">
            <label for="MaChienDich" class="font-weight-bold">Chọn Chiến Dịch</label>
            <select id="MaChienDich" name="DongGop.MaChienDich" class="form-control" required>
                <option value="">-- Chọn Chiến Dịch --</option>
                @foreach (var chienDich in Model.ChienDichs)
                {
                    <option value="@chienDich.MaChienDich">@chienDich.TenChienDich</option>
                }
            </select>
        </div>
    }

    <div class="form-group mt-3">
        <label for="SoTien" class="font-weight-bold">Số Tiền Đóng Góp</label>
        <input type="number" id="SoTien" name="DongGop.SoTien" class="form-control" placeholder="Nhập số tiền đóng góp" required />
    </div>

    <div class="form-group mt-3">
        <label class="font-weight-bold">Hình Thức Đóng Góp</label>
        <div class="d-flex mt-2">
            <div class="form-check mr-3">
                <input type="radio" id="VNPay" name="DongGop.HinhThucDongGop" value="VNPay" class="form-check-input" required />
                <label for="VNPay" class="form-check-label">VNPay</label>
            </div>
            <div class="form-check">
                <input type="radio" id="VietQR" name="DongGop.HinhThucDongGop" value="ChuyenKhoan" class="form-check-input" required />
                <label for="ChuyenKhoan" class="form-check-label">Chuyển Khoản</label>
            </div>
        </div>
    </div>

    <div class="text-center mt-4">
        <button type="submit" class="btn btn-primary btn-block">Đóng Góp</button>
    </div>
</form>

