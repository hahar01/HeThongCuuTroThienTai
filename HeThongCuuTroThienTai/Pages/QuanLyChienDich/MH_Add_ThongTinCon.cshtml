@page
@model HeThongCuuTroThienTai.Pages.MH_Add_ThongTinConModel
@{
}
<div class="container mt-5">
    <h1 class="display-5 text-center mb-4">Cập nhật thông báo cho chiến dịch</h1>

    <form method="post" class="needs-validation" novalidate>
       
        <div class="form-group mb-4">
            <label for="TenThongBaoChienDich" class="form-label">Tên thông báo</label>
            <input type="text" class="form-control" id="TenThongBaoChienDich"
                   name="ThongBaoChienDich.TenThongBaoChienDich" placeholder="Nhập tên thông báo" required />
            <div class="invalid-feedback">Vui lòng nhập tên thông báo.</div>
        </div>
     
        <div class="form-group mb-4">
            <label for="MoTa" class="form-label">Mô tả thay đổi</label>
            <textarea class="form-control" id="MoTa" name="ThongBaoChienDich.MoTa"
                      rows="5" placeholder="Nhập mô tả thay đổi" required></textarea>
            <div class="invalid-feedback">Vui lòng nhập mô tả thay đổi.</div>
        </div>

        <input type="hidden" name="ThongBaoChienDich.MaChienDich" value="@Model.MaChienDich" />

        <div class="d-flex justify-content-end mt-4">
            <button type="submit" class="btn btn-success me-2">Lưu thông báo</button>
            <a href="/QuanLyChienDich/MH_DanhSach_ChienDich" class="btn btn-secondary">Quay Lại</a>
        </div>
    </form>
</div>